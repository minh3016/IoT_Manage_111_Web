# =============================================================================
# COOLING MANAGER FRONTEND - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment
# Variables prefixed with VITE_ are included in the frontend build

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API base URL
VITE_API_URL=http://localhost:5000/api

# Socket.IO server URL for real-time updates
VITE_SOCKET_URL=http://localhost:5000

# =============================================================================
# APPLICATION INFORMATION
# =============================================================================
# Application name displayed in the UI
VITE_APP_NAME=Cooling Manager

# Application version
VITE_APP_VERSION=1.0.0

# Application description
VITE_APP_DESCRIPTION=IoT Cooling System Management

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable real-time updates via Socket.IO
VITE_ENABLE_REAL_TIME=true

# Enable push notifications
VITE_ENABLE_NOTIFICATIONS=true

# Enable dark mode theme switching
VITE_ENABLE_DARK_MODE=true

# Enable mock data for development (when backend is not available)
VITE_ENABLE_MOCK_DATA=false

# Enable Progressive Web App features
VITE_ENABLE_PWA=true

# Enable service worker for offline functionality
VITE_ENABLE_SERVICE_WORKER=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode with additional logging
VITE_DEBUG_MODE=false

# Enable development tools and debug panels
VITE_ENABLE_DEV_TOOLS=false

# Log level for frontend logging (error, warn, info, debug)
VITE_LOG_LEVEL=info

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
# Default theme mode (light, dark, auto)
VITE_DEFAULT_THEME=light

# Enable animations and transitions
VITE_ENABLE_ANIMATIONS=true

# Default language/locale
VITE_DEFAULT_LOCALE=en

# Enable right-to-left (RTL) support
VITE_ENABLE_RTL=false

# =============================================================================
# CHART AND VISUALIZATION
# =============================================================================
# Default chart refresh interval in milliseconds
VITE_CHART_REFRESH_INTERVAL=30000

# Maximum data points to display in charts
VITE_CHART_MAX_DATA_POINTS=100

# Enable chart animations
VITE_ENABLE_CHART_ANIMATIONS=true

# =============================================================================
# REAL-TIME CONFIGURATION
# =============================================================================
# Socket.IO connection timeout in milliseconds
VITE_SOCKET_TIMEOUT=5000

# Socket.IO reconnection attempts
VITE_SOCKET_RECONNECTION_ATTEMPTS=5

# Socket.IO reconnection delay in milliseconds
VITE_SOCKET_RECONNECTION_DELAY=1000

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Enable lazy loading for components
VITE_ENABLE_LAZY_LOADING=true

# Enable image optimization
VITE_ENABLE_IMAGE_OPTIMIZATION=true

# Enable code splitting
VITE_ENABLE_CODE_SPLITTING=true

# =============================================================================
# ANALYTICS AND MONITORING (Optional)
# =============================================================================
# Google Analytics tracking ID
VITE_GOOGLE_ANALYTICS_ID=

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# Enable error reporting
VITE_ENABLE_ERROR_REPORTING=false

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable Content Security Policy
VITE_ENABLE_CSP=true

# Enable HTTPS redirect in production
VITE_FORCE_HTTPS=false

# Session timeout in minutes
VITE_SESSION_TIMEOUT=60

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and modify these for production deployment

# VITE_API_URL=https://api.your-domain.com/api
# VITE_SOCKET_URL=https://api.your-domain.com
# VITE_ENABLE_MOCK_DATA=false
# VITE_DEBUG_MODE=false
# VITE_ENABLE_DEV_TOOLS=false
# VITE_LOG_LEVEL=warn
# VITE_ENABLE_ERROR_REPORTING=true
# VITE_ENABLE_PERFORMANCE_MONITORING=true
# VITE_FORCE_HTTPS=true

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Build output directory
VITE_BUILD_OUTPUT_DIR=dist

# Enable source maps in production
VITE_ENABLE_SOURCE_MAPS=false

# Enable bundle analyzer
VITE_ENABLE_BUNDLE_ANALYZER=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Only variables prefixed with VITE_ are included in the frontend build
# 2. Never include sensitive information in frontend environment variables
# 3. All VITE_ variables are publicly accessible in the browser
# 4. Use different .env files for different environments (.env.development, .env.production)
# 5. Restart the development server after changing environment variables
