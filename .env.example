# =============================================================================
# COOLING MANAGER IOT APPLICATION - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment
# Never commit .env files to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
APP_NAME=Cooling Manager
APP_VERSION=1.0.0

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Backend server settings
PORT=5000
HOST=0.0.0.0
API_PREFIX=/api

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:password@localhost:5432/cooling_manager?schema=public

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# JWT secrets - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-32-chars-minimum
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-32-chars-minimum
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# =============================================================================
# Backend API URL
VITE_API_URL=http://localhost:5000/api

# Socket.IO server URL
VITE_SOCKET_URL=http://localhost:5000

# Application information
VITE_APP_NAME=Cooling Manager
VITE_APP_VERSION=1.0.0

# Feature flags for frontend
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_MOCK_DATA=false
VITE_DEBUG_MODE=false

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =============================================================================
# SOCKET.IO CONFIGURATION
# =============================================================================
SOCKET_IO_CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
BCRYPT_ROUNDS=12

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REAL_TIME_UPDATES=true
ENABLE_SENSOR_SIMULATION=true
SEED_DATABASE=true

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
POSTGRES_DB=cooling_manager
POSTGRES_USER=cooling_user
POSTGRES_PASSWORD=cooling_password
